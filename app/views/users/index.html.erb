<% provide(:title, 'All users') %>

<h1>All users</h1>

<table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered table-hover dataTable" id="user_table">
<thead>
<tr role="row">
<th>Name</th>
<th>Email</th>
<th>Year</th>
<th>Delete</th>
</tr>
</thead>
<tbody>
<% for user in @users %>
<tr>
<td><%= link_to user.name, user %></td>
<td><%= user.email %></td>
<td><%= user.year == 1 ? "First Year" : "Second Year" %></td>
<td><% if current_user.admin? && !current_user?(user) %>
<%=  link_to "delete", user, method: :delete, data: {confirm: "You sure?"}%>
<% end %>
</td>
</tr>
<% end %>
</tbody>
</table>
